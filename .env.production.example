# Production environment variables for jlam-staging
# Copy to .env.production and fill in the values

# Database connection (Scaleway PostgreSQL)
DATABASE_URL=postgresql://infrastructure_user:PASSWORD@51.158.130.103:20832/jlam_staging

# Used to encrypt JWT tokens - generate with: openssl rand -base64 32
PAYLOAD_SECRET=YOUR_PAYLOAD_SECRET_HERE

# Server URL (no trailing slash)
NEXT_PUBLIC_SERVER_URL=https://staging.jeleefstijlalsmedicijn.nl

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_PREVIEW_SECRET_HERE

# Auth.js secret (required) - generate with: openssl rand -base64 32
AUTH_SECRET=YOUR_AUTH_SECRET_HERE

# Keycloak OIDC configuration
KEYCLOAK_CLIENT_ID=jlam-staging
KEYCLOAK_CLIENT_SECRET=YOUR_KEYCLOAK_SECRET_HERE
KEYCLOAK_ISSUER=https://auth.jlam.nl/realms/jlam
